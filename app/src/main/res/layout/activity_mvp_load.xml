<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.arny.myapidemo.mvp.view.hello.HelloWorldActivity">
    <Button
            android:id="@+id/helloButton"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/goodbyButton"
            android:text="By"
            android:layout_below="@+id/helloButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintLeft_toRightOf="@+id/helloButton"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/greetingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/goodbyButton" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="@+id/goodbyButton"
            android:layout_marginTop="17dp" tools:text="Text"/>
</android.support.constraint.ConstraintLayout>
