<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.arny.myapidemo.weather.view.WeatherViewActivity">
    <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvTemp"
			app:layout_constraintStart_toStartOf="parent"
			android:textSize="24sp"
			android:minWidth="50dp"
			android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tvCity"
			android:layout_marginLeft="8dp"/>
	<ImageView
			android:adjustViewBounds="true"
			android:layout_height="wrap_content" app:srcCompat="@drawable/bp_material_key_background"
			android:id="@+id/imgView" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="@+id/tvTemp" app:layout_constraintBottom_toBottomOf="@+id/tvTemp"
			app:layout_constraintStart_toEndOf="@+id/tvTemp" android:layout_marginLeft="32dp"
			android:layout_width="50dp"/>
	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/tvWeatherData"
			android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvTemp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			tools:text="fefefefe"/>
	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/tvWind" android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/imgView"
			app:layout_constraintStart_toEndOf="@+id/tvWeatherData" android:layout_marginLeft="8dp"
	/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvCity" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/toolbar"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>
