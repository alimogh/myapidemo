        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.arny.myapidemo.weather.view.WeatherViewActivity">
    <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeatherData" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>
