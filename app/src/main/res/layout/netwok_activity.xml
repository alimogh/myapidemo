<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.NetworkActivity">
    <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
    >
        <Button
                android:id="@+id/btnGETRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="GET"/>

        <Button
                android:id="@+id/btn_start_network_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Запустить сервис"
                android:layout_below="@+id/btnGETRequest"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <Button
                android:id="@+id/btn_stop_network_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Остановить сервис"
                android:layout_below="@+id/btnPUTRequest"
                android:layout_toRightOf="@+id/btnPOSTRequest"
                android:layout_toEndOf="@+id/btnPOSTRequest"/>
        <TextView
                android:id="@+id/tv_network_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_start_network_service" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <Button
                android:id="@+id/btnPOSTRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnGETRequest"
                android:layout_toEndOf="@+id/btnGETRequest"/>
        <Button
                android:id="@+id/btnPUTRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUT"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnPOSTRequest"
                android:layout_toEndOf="@+id/btnPOSTRequest"/>
    </RelativeLayout>


</RelativeLayout>