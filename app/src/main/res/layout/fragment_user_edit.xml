<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.arny.myapidemo.mvp.useredit.UserEditFragment">

    <ImageView
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="140dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:id="@+id/imgAvatar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtLogin"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:hint="Login"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edtEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtLogin" app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Email"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPass" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail" app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Password"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPassConfirm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPass" app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:hint="Password Confirm"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnEditAvatar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:src="@android:drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBtnDeleteAvatar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar" app:layout_constraintEnd_toEndOf="@+id/imgAvatar"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imgBtnEditAvatar"
            android:layout_marginStart="8dp"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_check_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabEdit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:fabSize="normal"/>
</android.support.constraint.ConstraintLayout>
