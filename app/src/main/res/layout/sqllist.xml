<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/sqlList"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAddObject"/>
	<Button
			android:text="Scroll"
			android:id="@+id/btnScroll"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_toLeftOf="@+id/btnAddObject"
			android:layout_toStartOf="@+id/btnAddObject"/>
    <Button
            android:text="Add"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnAddObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/cntObjects"
            android:hint="Count"
            android:inputType="numberSigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/btnAddObject"
            android:layout_toEndOf="@+id/btnAddObject"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/cntObjects" android:layout_toEndOf="@+id/cntObjects"
            android:id="@+id/btnAddroomTest"/>

</RelativeLayout>
