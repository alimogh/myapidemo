<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <EditText
        android:id="@+id/edtChrRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"/>

    <TextView
        android:id="@+id/chrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chrBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Info"/>

    <Button
        android:id="@+id/chrBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtChrRun"
        android:layout_alignBottom="@+id/edtChrRun"
        android:layout_toEndOf="@+id/edtChrRun"
        android:layout_toRightOf="@+id/edtChrRun"
        android:text="Run"/>
</RelativeLayout>